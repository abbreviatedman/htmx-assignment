<section id="recipes">
    <h1>Recipe List</h1>
    <button hx-get="/add-form" hx-swap="outerHTML">Add a recipe</button>
    <ul>
        <% recipes.forEach(recipe => { %>
            <li
	      class="recipe-item"
	      hx-get="/recipes/<%= recipe._id %>"
	      hx-target="#recipes"
	      hx-swap="outerHTML"
	    >
                <h2><%= recipe.title %></h2>
                <p class="total-time">Total Time: <%= recipe.prepTime + recipe.cookingTime %> minutes</p>
            </li>
        <% }); %>
    </ul>
</section>
